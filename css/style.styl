			.contacto
				display flex
				justify-content space-between
				margin espacioV*3 0 0 0
				div, form
					width 47%
					text-align left
	#masjams
		display flex
		justify-content center
		padding espacioV*3
		.contenedor
			display flex
			justify-content space-between
			>div, form
				width 47%
				text-align left
			>div
				div
					display flex
					height 100%
					.logo
						background url("/img/masjams.svg") no-repeat top center
						background-size 100%
						width 20%
						height 100%
						display inline-block
						margin-right 10%
						flex-grow 1
					p
						width 70%
	#suscribite
		display flex
		justify-content center
		padding espacioV*3 0
		.contenedor
			text-align left
			width 100%
			max-width 500px
	#redes
		display flex
		justify-content center
		padding espacioV*3 0
		.contenedor
			text-align center
			display flex
			flex-wrap wrap
			justify-content center
			h2
				width 100%
			a
				.logo
