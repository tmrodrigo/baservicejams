				li.eklos
					width 157px
					background url("/img/sponsors/eklos-logo-byn.png") center center no-repeat
					&:hover
						background url("/img/sponsors/eklos-logo.png") center center no-repeat
				li.globant
					width 100px
					background url("/img/sponsors/globant-logo-byn.png") center center no-repeat
					&:hover
						background url("/img/sponsors/globant-logo.png") center center no-repeat
				li.ibm
					width 144px
					background url("/img/sponsors/ibm-logo-byn.png") center center no-repeat
					&:hover
						background url("/img/sponsors/ibm-logo.png") center center no-repeat
				li.mural
					width 100px
					background url("/img/sponsors/mural-logo-byn.png") center center no-repeat
					&:hover
						background url("/img/sponsors/mural-logo.png") center center no-repeat
				li.coderhouse
					width 209px
					background url("/img/sponsors/coderhouse-logo-byn.png") center center no-repeat
					&:hover
						background url("/img/sponsors/coderhouse-logo.png") center center no-repeat
				li.intercultura
					width 100px
					background url("/img/sponsors/intercultura-logo-byn.png") center center no-repeat
					&:hover
						background url("/img/sponsors/intercultura-logo.png") center center no-repeat
			.contacto
				display flex
				justify-content space-between
				margin espacioV*3 0 0 0
				div, form
					width 47%
					text-align left
	#masjams
		display flex
		justify-content center
		padding espacioV*3
		.contenedor
			display flex
			justify-content space-between
			>div, form
				width 47%
				text-align left
			>div
				div
					display flex
					height 100%
					.logo
						background url("/img/masjams.svg") no-repeat top center
						background-size 100%
						width 20%
						height 100%
						display inline-block
						margin-right 10%
						flex-grow 1
					p
						width 70%
	#redes
		text-align center

	.TODOTODOTODOTODOTODOTODOTODOTODOTODOTODOTODOTODOTODOTODO
		background none

	#servicios
		background #f0f0f0
		color black
		text-align center
		#software-factory
			.contenedor
				background url('/img/software-factory.svg') no-repeat top left -12px +espacioH
				background-size 147.22px
				height 395px
				padding-top 110px
		#diseno-centrado-en-personas
			.contenedor
				background url('/img/diseno-centrado-en-las-personas.svg') no-repeat top left -12px +espacioH
				background-size 147.22px
				height 374px
				padding-top 90px
		#hardware-a-medida
			.contenedor
				background url('/img/hardware-a-medida.svg') no-repeat top left -12px +espacioH
				background-size 147.22px
				padding-top 90px
				height 433px
		>div
			.contenedor
				max-width 1200px
				padding-left 150px+espacioH
				h2
					color verde
					margin-bottom espacioV
				p
					margin-bottom espacioV
					max-width 500px
				ul
					li
						list-style-type square
						margin-left espacioH
footer
	background azul
	color white
	text-align center
	#footer
		.contenedor
			display flex
			background url('/img/dots.svg') no-repeat top left -12px +espacioH
			max-width 1200px
			background-size 147.22px
			margin 0 auto
			padding 42px 0 42px 85px +espacioH
			form
				width 25%
				margin-right 5%
				h2
					text-transform uppercase
					font-size 20px
					margin 0 0 espacioV 0
				input[type='text'], input[type='email']
					margin 0 0 espacioV 0
					background none
					color white
					width 100%
					border none
					border-bottom 1px solid white
					padding espacioV*.5 0
					font-size inherit
					&::placeholder
						color #5E7479
				input[type='submit']
					margin espacioV 0 0 0
			iframe
				border-radius radio
				margin-right 2%
				width 40%
				height 300px
			>div
				width 28%
				display flex
				flex-direction column
				justify-content center
				flex-wrap wrap
				>*
					width 100%
				h2
					font-size 24px
				div
					display flex
					align-items center
					margin espacioV*.3 0 0 0
					&:first-of-type
						margin espacioV 0 0 0
					a.button
						margin-right espacioH*.5
						background white
						color verde
					a:not(.button)
						text-transform none
						font-weight normal
	#nav
		padding 0 espacioH
		border-bottom none
		border-top 1px solid rgba(255,255,255,.2)
	
