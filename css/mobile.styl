@media (max-width: 800px)
	body
		background-position right -100px top 50px
		background-size 200%, 100vw
	header, #nav
		display flex
		justify-content center
		border-bottom 1px solid rgba(255,255,255,.2)
		height 70px
		color white
		padding 0 espacioH
		.contenedor
			justify-content space-between
			.logo
				width 80px
			ul
				margin 0
	main
		#hero
			.contenedor
				background url('/img/dots.svg') no-repeat bottom -12px left -12px +espacioH
				background-size 100px
		#servicios
			#software-factory
				.contenedor
					height auto
					background-size 100px
					padding-top 53px
			#diseno-centrado-en-personas
				.contenedor
					height auto
					background-size 100px
					padding-top 20px
			#hardware-a-medida
				.contenedor
					height auto
					background-size 100px
					padding-top 40px
			>div
				.contenedor
					padding-left 100px+espacioH
					padding-right espacioH
					padding-bottom espacioV*2
	footer
		#footer
			.contenedor
				background-size 100px
				flex-direction column
				padding-left espacioH
				padding-right espacioH
				padding-top 76px
				form
					width 100%
					margin-bottom espacioV*3
				iframe
					width 100%
					margin-bottom espacioV*3
				>div
					width 100%